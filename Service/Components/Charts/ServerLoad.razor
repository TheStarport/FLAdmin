@using Common.State.ServerLoad;
@inject IState<ServerLoadState> loadState

<RadzenChart>
    <RadzenLineSeries Smooth="true" Data="@_serverLoad" CategoryProperty="MS" Title="Server Load (ms)" LineType="LineType.Solid" ValueProperty="Index">
        <RadzenMarkers MarkerType="MarkerType.Square" />
        <RadzenLegend Visible="false" />
        <RadzenCategoryAxis Visible=false/>
    </RadzenLineSeries>
</RadzenChart>

@code {

    class Load
    {
        public uint MS { get; set; }
        public static int TotalIndex { get; set; } = 0;
        public int Index { get; set; }

        public Load(uint ms)
        {
            MS = ms;
            Index = TotalIndex++;
        }
    }

    List<Load> _serverLoad = new();

    protected override void OnInitialized()
    {
        base.OnInitialized();

        loadState.StateChanged += (_, _) =>
        {
            _serverLoad.Add(new (loadState.Value.ServerLoadMs));
        };
    }
}