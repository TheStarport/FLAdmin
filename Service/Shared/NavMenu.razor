<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"/>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column-fill">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"/> Dashboard
            </NavLink>
        </div>
        <AuthorizeView>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="console">
                    <span class="oi oi-terminal" aria-hidden="true"/> Console
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="players">
                    <span class="oi oi-people" aria-hidden="true"/> Players
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="logs">
                    <span class="oi oi-inbox" aria-hidden="true"/> Chat Logs
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="bans">
                    <span class="oi oi-wrench" aria-hidden="true"/> Bans
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="scripts">
                    <span class="oi oi-inbox" aria-hidden="true"/> Scripts
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admins">
                    <span class="oi oi-key" aria-hidden="true"/> Admin Management
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="configuration">
                    <span class="oi oi-cog" aria-hidden="true"/> Configuration
                </NavLink>
            </div>

            <div class="push-to-bottom nav-item px-3">
                <Service.Components.Auth.LogOut />
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    const string navMenu = "nav-menu ";
    private string? NavMenuCssClass => navMenu + (collapseNavMenu ? "collapse" : "");

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
